datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

// Role enum
enum Role {
  ADMIN
  USER
}


model User {
  id        Int       @id @default(autoincrement())
  firstName String?   // optional
  lastName  String?   // optional
  age       Int?
  email     String    @unique
  password String   // required 
  image     String
  role      Role      @default(USER) // <-- role field ADMIN or USER
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt   //  optional 

  // Relations with other tables
  addresses Address[] // One-to-many relation
  products  Product[] // (optional) products created by user (if desired)
  cartItems CartItem[]   // <-- NEW Relation for Cart Items
}


model Address {
  id        Int      @id @default(autoincrement())
  userId    Int
  street    String
  city      String
  state     String
  zipCode   String?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt //  optional 

  // CASCADE DELETE: When user is deleted â†’ all its addresses deleted automatically
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  images      String[]   // <-- array of image URLs / paths
  createdById Int?     // optional: which user created it
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
  cartItems CartItem[] // <-- NEW Relation for Cart Items
}

model CartItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}